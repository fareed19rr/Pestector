<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Deteksi">

        <ImageView
            android:id="@+id/view_image_deteksi"
            android:src="@drawable/ic_photograph"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:background="@color/gray"

            />
        <Button
            android:id="@+id/button_kamera"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/view_image_deteksi"
            app:layout_constraintRight_toRightOf="@id/button_galeri"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="40dp"
            android:layout_marginRight="75dp"
            android:text="Kamera"
            android:textSize="18sp"
            />

        <Button
            android:id="@+id/button_galeri"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="40dp"
            android:text="Galeri"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="@id/button_kamera"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_image_deteksi" />

        <TextView
            android:id="@+id/text_deteksi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/button_galeri"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Pilih Gambar"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/text_deteksi_deskripsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/text_deteksi"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Praesent finibus elit in dictum lobortis. Nunc et dui in nunc iaculis eleifend et eu justo. Praesent laoreet, purus ut commodo consequat, erat nibh vulputate sapien, et tincidunt arcu ipsum sed mauris. Nulla commodo molestie lectus. Integer iaculis, ex sit amet mollis tempor, enim massa facilisis ex, non cursus neque diam at dui. Maecenas laoreet sapien a dapibus sagittis. Nulla facilisi. Sed et neque augue. Quisque nec eros vitae ex lobortis porta sed vel risus. Praesent gravida mauris at lacus accumsan, nec vehicula diam finibus."
            android:textSize="15sp"
            android:textColor="@color/black"
            android:justificationMode="inter_word"
            android:visibility="invisible"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>